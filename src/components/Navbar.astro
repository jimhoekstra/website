---
const { activePage } = Astro.props;

const baseClass = 'nav-link';
const homeClass = activePage === 'home' ? (baseClass + ' active') : baseClass;
const blogClass = activePage === 'blog' ? baseClass + ' active' : baseClass;
const projectsClass = activePage === 'projects' ? baseClass + ' active' : baseClass;
---

<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container-md">

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" 
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <ul class="navbar-nav mx-auto fs-5">
        <li class="nav-item mx-3">
          <a class={homeClass} aria-current="page" href="/">
            <i class="bi bi-house"></i>
            Home
          </a>
        </li>
        <li class="nav-item mx-3">
          <a class={blogClass} href="/blog">
            <i class="bi bi-book"></i>
            Blog
          </a>
        </li>
        <li class="nav-item mx-3">
          <a class={projectsClass} href="/projects">
            <i class="bi bi-code-slash"></i>
            Projects
          </a>
        </li>
      </ul>
    </div>

  </div>
</nav>

<style>
  nav {
      margin-bottom: 3.5em;
      background-color: rgb(191, 51, 0);
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
  }

  .nav-item {
      padding: 0 0.5em;
  }
</style>