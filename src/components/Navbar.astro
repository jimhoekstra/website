---
const { activePage } = Astro.props;

const baseClass = 'nav-link';
const homeClass = activePage === 'home' ? (baseClass + ' active') : baseClass;
const blogClass = activePage === 'blog' ? baseClass + ' active' : baseClass;
const projectsClass = activePage === 'projects' ? baseClass + ' active' : baseClass;
---

<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container-fluid">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" 
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <div class="container-md">
        <div class="row">
          <div class="col-md-2"></div>
          <div class="col-md-8">

            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class={homeClass} aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class={blogClass} href="/blog">Blog</a>
              </li>
              <li class="nav-item">
                <a class={projectsClass} href="/projects">Projects</a>
              </li>
            </ul>

          </div>
          <div class="col-md-2"></div>
        </div>
      </div>
      
    </div>
  </div>
</nav>

<style>
  nav {
      margin-bottom: 2em;
      background-color: rgb(191, 51, 0);
  }

  .nav-item {
      padding: 0 0.5em;
  }
</style>